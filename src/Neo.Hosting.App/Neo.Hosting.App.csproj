<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <AssemblyTitle>Neo.Hosting.App</AssemblyTitle>
    <AssemblyName>neo-cmd</AssemblyName>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath>../../bin/$(AssemblyTitle)</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="config.localnet.json" />
    <Content Include="config.mainnet.json" />
    <Content Include="config.testnet.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="config.mainnet.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="config.testnet.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="config.localnet.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Systemd" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="8.0.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="System.CommandLine.Hosting" Version="0.4.0-alpha.22272.1" />
    <PackageReference Include="System.IO.Pipelines" Version="8.0.0" />
    <PackageReference Include="System.Runtime.Serialization.Formatters" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Neo\Neo.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="$(AssemblyTitle).Tests" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="CommandLine\Prompt\" />
    <Folder Include="Configuration\" />
    <Folder Include="Extensions\Logging\" />
    <Folder Include="Factories\" />
    <Folder Include="Handlers\" />
    <Folder Include="Helpers\" />
    <Folder Include="Host\Service\" />
    <Folder Include="NamedPipes\Protocol\Messages\" />
    <Folder Include="NamedPipes\Protocol\Payloads\" />
    <Folder Include="Providers\" />
  </ItemGroup>

</Project>
