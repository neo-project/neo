<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$(MSBuildStartupDirectory)/src/$(MSBuildThisFile)" />

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <PackageId>Neo.Plugins.$(MSBuildProjectName)</PackageId>
    <PackageOutputPath>../../../pkgs/</PackageOutputPath>
    <OutputPath>../../../bin/$(PackageId)</OutputPath>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <OverwriteReadOnlyFiles>true</OverwriteReadOnlyFiles>
    <PluginOutDir>../../../bin/Plugins</PluginOutDir>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Akka" Version="1.5.46" ExcludeAssets="runtime" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.7" ExcludeAssets="runtime" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="9.0.7" ExcludeAssets="runtime" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="9.0.7" ExcludeAssets="runtime" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.7" ExcludeAssets="runtime" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../Neo/Neo.csproj" ExcludeAssets="runtime" Private="false" />
    <ProjectReference Include="../../Neo.ConsoleService/Neo.ConsoleService.csproj" ExcludeAssets="runtime" Private="false" />
    <ProjectReference Include="../../Neo.Cryptography.BLS12_381/Neo.Cryptography.BLS12_381.csproj" ExcludeAssets="runtime" Private="false" />
    <ProjectReference Include="../../Neo.Extensions/Neo.Extensions.csproj" ExcludeAssets="runtime" Private="false" />
    <ProjectReference Include="../../Neo.IO/Neo.IO.csproj" ExcludeAssets="runtime" Private="false" />
    <ProjectReference Include="../../Neo.Json/Neo.Json.csproj" ExcludeAssets="runtime" Private="false" />
    <ProjectReference Include="../../Neo.VM/Neo.VM.csproj" ExcludeAssets="runtime" Private="false" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../../.neo/neo.png" Pack="true" Visible="false" PackagePath=""/>
    <None Include="../../../.neo/README.md" Pack="true" Visible="false" PackagePath=""/>
  </ItemGroup>

</Project>
