<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Neo.Plugins.Telemetry</RootNamespace>
    <AssemblyName>Telemetry</AssemblyName>
    <Description>Telemetry and metrics collection plugin for Neo N3 full node</Description>
    <PackageTags>NEO;Blockchain;Telemetry;Metrics;Prometheus;OpenTelemetry</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="prometheus-net" Version="8.2.1" />
    <PackageReference Include="prometheus-net.AspNetCore" Version="8.2.1" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Neo\Neo.csproj" />
  </ItemGroup>

</Project>
