    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
    <PackageId>Neo.SDK</PackageId>
    <PackageTags>NEO;AntShares;Blockchain;Smart Contract;SDK;Software Development Kit</PackageTags>
    <BaseOutputPath>../../bin/$(PackageId)</BaseOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="8.0.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Neo\Neo.csproj" />
  </ItemGroup>

</Project>
