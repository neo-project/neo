@{
    ViewData["Title"] = "Index";
}
<style>
    .cert { padding: 0; }
    .cert li { margin-bottom: 10px; list-style: none; }
    .cert li span { background-color: #f0f0f0; border-radius: 4px; padding: 6px 10px; letter-spacing: 1px; width: 50%; min-width: 400px; vertical-align: middle; display: inline-block; }
    .cert li .btn { margin-left: 5px; }
    .certdiv { padding:0; margin-bottom:10px }
</style>
<h2 class="page-header">证书管理</h2>
<div class="row nomargin">
    <div class="col-md-12 certdiv">
        <a class="btn btn-success withripple">申请签名证书</a>
        <a class="btn btn-info withripple">创建自签名证书</a>
        <a class="btn btn-primary withripple">导入证书</a>
    </div>
    <ul class="col-sm-8 cert">    
        <li>
            <span>chenzhitong</span>
            <button class="btn btn-success withripple">导出</button>
            <a href="~/Wallet/Address?id=1" class="btn btn-info withripple">详情</a>
            <button class="btn btn-danger withripple">删除</button>
        </li>
    </ul>
</div>